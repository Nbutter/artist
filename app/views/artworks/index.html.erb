<p id="notice"><%= notice %></p>

<h1>Listing Artworks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year started</th>
      <th>Year completed</th>
      <th>Exhibition</th>
      <th>Mediums</th>
      <th>Height</th>
      <th>Width</th>
      <th>Depth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.title %></td>
        <td><%= artwork.year_started %></td>
        <td><%= artwork.year_completed %></td>
        <td><%= artwork.exhibition_id %></td>
        <td><%= artwork.mediums %></td>
        <td><%= artwork.height %></td>
        <td><%= artwork.width %></td>
        <td><%= artwork.depth %></td>
        <td><%= link_to 'Show', artwork %></td>
        <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
        <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

